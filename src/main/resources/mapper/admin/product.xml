  <sql id="searchCondition">
     <where>
        <choose>
            <when test="searchDiv == '10' and '' != searchDiv">
              category_nm LIKE #{searchWord} || '%'
            </when>
            <when test="searchDiv == '20' and '' != searchDiv">
              status LIKE #{searchWord} || '%'
            </when>
        </choose>
     </where>
  </sql>
    
